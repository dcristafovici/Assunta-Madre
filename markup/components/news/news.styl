.news
  padding-bottom 30px
  &-items
    display flex
    justify-content space-between
    flex-wrap wrap
  &-item
    width calc(50% - 15px)
    margin-bottom 30px
    &:hover
      .news-item__content
        background $DARK
      .news-item__name,
      .news-item__paragraph
        color $WH
      .news-item__name::after
        background $WH
    &__wrapper
      display flex
      justify-content space-between
    &__content
      width 50%
      background $GRAY
      text-align center
      transition $tr
      display flex
      flex-direction column
      justify-content center
      align-items center
      padding 15px
      bb()
    &__name
      line-height 1.5
      font-size 22px
      position relative
      padding-bottom 15px
      margin-bottom 15px
      transition $tr
      &::after
        content ''
        position absolute
        bottom 0
        left 50%
        width 80px
        height 1px
        background $GOLD
        transition $tr
        margin-left -40px
    &__paragraph
      p
        transition $tr
    &__photo
      width 50%
      display flex
      justify-content center
      align-items center
      img
        width 100%
        height 100%
        object-fit cover