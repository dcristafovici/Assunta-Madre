.menu
  height calc(100vh - 135px)
  &-items
    display flex
    justify-content space-between
    height 100%
  &-item
    width 33.3333%
    height 100%
    position relative
    &:hover
      &::before
        background rgba(255,255,255,0.75)
      .menu-item__name
        color $DARK
    &::before
      content ''
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background rgba(0,0,0,.75)
      transition all .5s ease-in-out
    &__name
      display flex
      justify-content center
      align-items center
      position absolute
      left 0
      top 0
      width 100%
      transition $tr
      height 100%
      font-size 26px
      color $WH
      text-transform uppercase
    &__photo
      height 100%
      img
        width 100%
        height 100%
        object-fit cover
