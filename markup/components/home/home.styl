.home
  height calc(100vh - 135px)
  position relative
  width 100%
  &-video
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    video
      width 100%
      height 100%
      object-fit cover
    &::before
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background: $BK;
      opacity: 0.5;

  &-content
    position relative
    width 100%
    height 100%
    z-index 5
    text-align center
    padding-top 10vh
    h1
      color $WH
      text-transform none