.abroad
  padding-bottom 30px
  &-items
    display flex
    justify-content center
    align-items center
  &-item
    width 33.3333%
    position relative
    &:hover
      &::before
        opacity 0
      .abroad-item__name
        opacity 0
        pointer-events none
      &::after
        opacity 1
    &::before
      content ''
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      transition $tr
      bb()
      background rgba(252,252,246,.8)
    &::after
      content ''
      position absolute
      left 0
      top 0
      width 100%
      bb()
      opacity 0
      transition $tr
      height 100%
      border 5px solid $GOLD
    img
      width 100%
      height 100%
      object-fit cover
    &__name
      position absolute
      width 100%
      height 100%
      display flex
      justify-content center
      top 0
      left 0
      transition $tr
      align-items center
      font-size 26px
      text-transform uppercase
      color $BK