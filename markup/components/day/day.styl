.day
  &-wrapper
    margin-bottom 30px
  .title
    text-align center
    margin-bottom 40px
    h1
      display flex
      justify-content center
      align-items center
      span 
        color $GOLD
        position relative
        &::before,
        &::after
          content ''
          position absolute
          top -2px
          left -15px
          width calc(100% + 30px)
          height 2px
          background $GOLD
        &::after
          top auto
          bottom 0


  &-point
    margin-bottom 50px
    &:last-child
      margin-bottom 0
    &__name
      text-align center
      margin-bottom 50px
    &__list
      max-width 1000px
      margin 0 auto
      li  
        display flex
        justify-content space-between
        align-items center
        padding 12px 15px
        border-bottom 1px solid #eaeaea
        bb()
        span
          font-size 18px
          text-transform uppercase
    &__desc
      text-align center
      position relative
      top -20px
      font-size 18px
      line-height normal
      text-transform uppercase
      font-family $Bold

.day
  padding-bottom 50px
  &-button
    display flex
    justify-content center
    align-items center