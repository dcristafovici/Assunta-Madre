.delivery
  height calc(100vh - 135px)
  &-wrapper
    height 100%
  &-bottom
    display flex
    justify-content space-between
  &-item
    display flex
    justify-content center
    align-items center
    width 33.3333%
    position relative
    &:hover
      .delivery-item__logo
        z-index 4
      &::after
        background rgba(255,255,255,0.5)
    &::after
      content ''
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      transition $tr
      background rgba(0,0,0,0.5)
    &__bg
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      img
        width 100%
        height 100%
        object-fit cover
    &__logo
      position absolute
      left 50%
      top 50%
      transform translate(-50%, -50%)
  &-top,
  &-bottom
    height 50%
  &-top
    position relative
    &__bg
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      &::before
        content ''
        position absolute
        width 100%
        top 0
        left 0
        height 100%
        z-index 3 
        background rgba(0,0,0,0.5)
      img
        width 100%
        height 100%
        object-fit cover