body
  min-width 320px
  overflow-x hidden
  font-family $Reg
  color $BK
  font-size 16px
  background $BEIGE

main.assunta-main
  padding-top 90px
  box-sizing border-box
  overflow hidden


.content
  max-width 95%
  margin 0 auto
  width 100%

a
  text-decoration none
  color inherit
  outline none

img
  max-width 100%
  max-height 100%

h1
  font-size 38px
  text-transform uppercase
  line-height 1.2

h2
  font-size 28px
  text-transform uppercase

h3
  font-size 24px
  text-transform uppercase
  line-height 1.4
  color $DARK

.title
  margin-bottom 30px

p
  line-height 1.5

.slick-slide
  outline none


.slick-slide
  margin 0 7.5px
.slick-list
  margin 0 -7.5px

.slick-arrow
  content none
  width 28px
  height 83px
  background none
  cursor pointer
  font-size 0
  border none
  outline none
  position absolute
  left 0
  top 50%
  left -50px
  margin-top -46.5px
  &.slick-next
    left auto
    right -50px
    transform rotate(180deg)
  &::before
    content ''
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background url('../img/assets/slider/arr.svg') no-repeat center/contain
  