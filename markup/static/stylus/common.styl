body
  min-width 320px
  overflow-x hidden
  font-family $Reg
  color $BK
  font-size 16px
  background $BEIGE

main.assunta-main
  padding-top 90px
  box-sizing border-box
  overflow hidden


.content
  max-width 95%
  margin 0 auto
  width 100%

a
  text-decoration none
  color inherit
  outline none

img
  max-width 100%
  max-height 100%

h1
  font-size 38px
  text-transform uppercase
  line-height 1.2

h2
  font-size 28px
  text-transform uppercase

.title
  margin-bottom 30px

p
  line-height 1.5